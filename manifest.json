{
    "manifest_version": 3,
    "name": "Hello World Tailwind Extension",
    "version": "1.0",
    "description": "A simple Chrome extension styled with Tailwind CSS",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_security_policy": {
      "extension_pages": "default-src 'self'; style-src 'self'; script-src 'self';"
    }
  }
  